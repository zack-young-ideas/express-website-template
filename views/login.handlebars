<div class="container px-4 text-center">
  <div class="row">
    <div class="col-md-6 col-12 mt-4">
      <form method="post" action="{% url 'login' %}">
        <fieldset class="border p-4">
          <legend class="h2 mb-3">Login</legend>
          <p>
            <input
              class="form-control"
              name="username"
              placeholder="Email"
              required
              type="text"
            />
          </p>
          <p>
            <input
              class="form-control"
              name="password"
              placeholder="Password"
              required
              type="password"
            />
          </p>
          <input
            name="csrfmiddlewaretoken"
            value="{{csrfToken}}"
            type="hidden"
          />
          <input
            class="btn btn-primary mb-3 px-5"
            type="submit"
            value="Log in"
          />
          <p>
            <a href="">
              Forgot password?
            </a>
          </p>
        </fieldset>
      </form>
    </div>
    <div class="col-md-6 col-12 mt-4">
      <div class="border p-4">
        <a
          href="{% url 'create_user' %}"
          class="btn btn-primary"
        >
          Create new account
        </a>
      </div>
    </div>
  </div>
</div>
